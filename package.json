{
  "name": "root",
  "private": true,
  "workspaces": [],
  "devDependencies": {
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "husky": "^8.0.3",
    "lerna": "~7.3.1",
    "nx": "^16.10.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build --no-private",
    "build:style": "lerna run build:scss --no-private",
    "build:storybook": "pnpm run --filter=@dynamic-framework/ui-react build:storybook",
    "clean": "lerna clean",
    "storybook": "pnpm run --filter=@dynamic-framework/ui-react storybook",
    "eslint": "lerna run eslint --no-private",
    "stylelint": "lerna run stylelint --no-private",
    "test": "lerna run test --no-private",
    "publish": "lerna publish --no-private --loglevel verbose"
  },
  "engines": {
    "node": ">=18.18",
    "pnpm": ">=7.29"
  },
  "pnpm": {
    "overrides": {
      "webpack@>=5.0.0 <5.76.0": ">=5.76.0",
      "http-cache-semantics@<4.1.1": ">=4.1.1",
      "tough-cookie@<4.1.3": ">=4.1.3",
      "loader-utils@>=2.0.0 <2.0.4": ">=2.0.4",
      "word-wrap@<1.2.4": ">=1.2.4",
      "@adobe/css-tools@<4.3.1": ">=4.3.1",
      "semver@<5.7.2": ">=5.7.2",
      "postcss@<8.4.31": ">=8.4.31"
    }
  }
}
