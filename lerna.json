{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "npmClient": "pnpm",
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["master"],
      "message": "chore(release): update versions",
      "private": false,
      "noPush": false,
      "noGitTagVersion": false,
      "conventionalCommits": true,
      "noCommitHooks": true,
      "yes": true,
      "changelogPreset": "conventionalcommits",
      "createRelease": "github"
    }
  }
}
